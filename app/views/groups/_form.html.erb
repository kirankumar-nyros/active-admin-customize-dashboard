<%= form_for @group, :html => { :class => "form-horizontal group" } do |f| %>

    <% if @group.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @group.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%= error_span(@group[:name]) %>
  </div><br><br>

<h1>Skills</h1>
<table class="table table-striped">
  <% for skill in @skills %>
  <tr>
  <td>
   <%= check_box_tag('skill_list[]', skill.id, @group.skills.collect {|obj| obj.id}.include?(skill.id)) %>
 &nbsp; <%= skill.name %>
        </td></tr>
  <% end -%>
  </table><br><br>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            groups_path, :class => 'btn btn-default' %>

<% end %>
